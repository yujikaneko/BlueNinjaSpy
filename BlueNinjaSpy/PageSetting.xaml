<Page
    x:Class="BlueNinjaSpy.PageSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueNinjaSpy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="1080">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,40,10,10" TextWrapping="Wrap" Text="Logging"  FontSize="15"/>
        <Button Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,10,10,2" Width ="72" Height="72" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Click="Button_Click">
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE105;" FontSize="48" Margin="0,0,0,0"/>
        </Button>
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" Margin="60,2,10,10" TextWrapping="Wrap" Text="Select file..." VerticalAlignment="Top" FontSize="15" SelectionChanged="TextBlock_SelectionChanged"/>
    </Grid>
</Page>
